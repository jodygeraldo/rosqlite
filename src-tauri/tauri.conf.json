{
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "rosqlite",
		"version": "1.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"shell": {
				"all": false,
				"open": true
			},
			"dialog": {
				"all": false,
				"ask": false,
				"confirm": false,
				"message": false,
				"open": true,
				"save": true
			},
			"path": {
				"all": true
			}
		},
		"bundle": {
			"active": true,
			"icon": [
				"icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png",
				"icons/icon.icns", "icons/icon.ico"
			],
			"identifier": "com.jodygeraldo.rosqlite",
			"targets": "all"
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "rosqlite",
				"width": 800,
				"height": 600
			}
		]
	}
}
